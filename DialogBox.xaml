<Window x:Class="KeyboardMaster.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardMaster"
        mc:Ignorable="d"
        Title="Введите время..." Height="120" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Label Content="Введите желаемое время теста в формате xx:xx" HorizontalAlignment="Center" VerticalAlignment="Center" Width="280"/>
        <TextBox x:Name="tbTime" Grid.Row="1" FontSize="16" TextWrapping="NoWrap" Margin="10" KeyDown="TextBox_KeyDown"/>
    </Grid>
</Window>
