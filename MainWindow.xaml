            <ColumnDefinition Width="820"/>
            <ColumnDefinition Width="377"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="313"/>
            <RowDefinition Height="249"/>
        </Grid.RowDefinitions>

        <Grid x:Name="title_Animation" Visibility="Visible" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <Grid>
                <MediaElement x:Name="media3" Visibility="Hidden" Opacity="0.4" UnloadedBehavior="Manual" MediaEnded="media3_MediaEnded"  Stretch="Fill" Margin="0">
                </MediaElement>
            </Grid>

            <MediaElement x:Name="media2" Visibility="Hidden" Opacity="0.4" UnloadedBehavior="Manual"  Stretch="Fill" Margin="0">
                <MediaElement.Triggers>
                    <EventTrigger RoutedEvent="MediaElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             To="0"
                                             BeginTime="0:0:4.3"
                                             Duration="0:0:0.5">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </MediaElement.Triggers>
            </MediaElement>
            <MediaElement x:Name="media" Visibility="Visible" UnloadedBehavior="Manual"  Stretch="Fill" Margin="-100">
                <MediaElement.Triggers>
                    <EventTrigger RoutedEvent="MediaElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             To="0"
                                             BeginTime="0:0:2.1"
                                             Duration="0:0:2.8">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </MediaElement.Triggers>
            </MediaElement>
            <Label x:Name="loadLabel" Visibility="Hidden" VerticalAlignment="Center" HorizontalAlignment="Center"  Content="Keyboard master" FontSize="55" FontWeight="Bold">
                <Label.Triggers>
                    <EventTrigger RoutedEvent="MediaElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             To="0"
                                             BeginTime="0:0:4.3"
                                             Duration="0:0:0.5"
                                             >
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Label.Triggers>
            </Label>
        </Grid>

